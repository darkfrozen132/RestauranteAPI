<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_p"
        android:layout_width="616dp"
        android:layout_height="376dp"
        android:background="@color/login_ek3_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_p"
        android:layout_width="149dp"
        android:layout_height="105dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="252dp"
        android:text="Cancelar"
        app:layout_constraintStart_toStartOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

    <Button
        android:id="@+id/btn_aceptar_p"
        android:layout_width="149dp"
        android:layout_height="105dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="80dp"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

    <Button
        android:id="@+id/btn_decremento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="128dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

    <Button
        android:id="@+id/btn_inscremento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="276dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

    <TextView
        android:id="@+id/cantidad"
        android:layout_width="99dp"
        android:layout_height="41dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="420dp"

        app:layout_constraintEnd_toEndOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

    <TextView
        android:id="@+id/textplato"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="212dp"

        app:layout_constraintEnd_toEndOf="@id/view_p"
        app:layout_constraintTop_toTopOf="@id/view_p" />

</androidx.constraintlayout.widget.ConstraintLayout>