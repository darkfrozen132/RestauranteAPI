<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_bg__login_ek2_shape">

    <TextView
        android:id="@+id/menu_principal"
        android:layout_width="313dp"
        android:layout_height="120dp"
        android:layout_marginStart="433dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="Menu Principal"
        android:textColor="#ccc"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/pedido_en_mesa"
        android:layout_width="313dp"
        android:layout_height="120dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="256dp"
        android:background=""
        android:gravity="center"
        android:text="Pedido en mesa"
        android:textColor="#ccc"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pedido_para_llevar"
        android:layout_width="313dp"
        android:layout_height="120dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="484dp"
        android:background=""
        android:gravity="center"
        android:text="Pedido para llevar"
        android:textColor="#ccc"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_configuracion" />
</androidx.constraintlayout.widget.ConstraintLayout>


