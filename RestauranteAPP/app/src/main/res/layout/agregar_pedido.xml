<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="@drawable/_bg__login_ek2_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="NUMERO DE MESA:"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_seleccionar"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="204dp"
        android:text="SELECCIONE TIPO:"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_mesa"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="36dp"
        android:background="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_tipo"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="204dp"
        android:background="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_mesa"
        android:layout_width="531dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_atras"
        android:layout_width="166dp"
        android:layout_height="176dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="544dp"
        android:drawableLeft="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>