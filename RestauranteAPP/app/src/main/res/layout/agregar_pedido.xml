<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="@drawable/_bg__login_ek2_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spiner_platos"
        android:layout_width="347dp"
        android:layout_height="102dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="194dp"
        android:background="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="138dp"
        android:text="NUMERO DE MESA:"
        android:textColor="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_mesa"
        android:layout_width="268dp"
        android:layout_height="42dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Ingrese el numero de la mesa"
        android:inputType="number"
        android:textColor="@color/login_ek3_color"
        android:textColorHint="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>