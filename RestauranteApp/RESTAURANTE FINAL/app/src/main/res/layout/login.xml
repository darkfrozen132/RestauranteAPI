<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >

	<ScrollView android:id="@+id/login"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >



			<RelativeLayout android:id="@+id/page_login_ek1"
				android:layout_marginTop="0dp"
				android:layout_marginStart="0dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>


				<View
					android:id="@+id/_bg__login_ek2"
					android:layout_width="match_parent"
					android:layout_height="800dp"
					android:layout_marginStart="-1dp"
					android:layout_marginTop="-1dp"
					android:background="@drawable/login" />

				<View
					android:layout_width="400dp"
					android:layout_height="550dp"
					android:layout_centerVertical="true"
					android:layout_marginStart="440dp"
					android:layout_marginRight="450dp"

					android:background="@drawable/_bg__login_ek2_shape"

					/>


				<TextView android:id="@+id/login_ek3"
					android:textStyle="bold|italic"
					android:textSize="40sp"
					android:textColor="@color/white"
					android:layout_marginLeft="580dp"
					android:layout_marginTop="200dp"
					android:layout_width="150dp"
					android:layout_height="60dp"
					android:text="LOGIN"

					/>

				<ImageView
					android:id="@+id/user_icon"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginTop="343dp"
					android:layout_marginLeft="460dp"
					android:layout_marginEnd="10dp"
					android:src="@drawable/iconol" />

				<ImageView
					android:id="@+id/user_icon"
					android:layout_width="34dp"
					android:layout_height="34dp"
					android:layout_marginTop="450dp"
					android:layout_marginLeft="460dp"
					android:layout_marginEnd="10dp"
					android:src="@drawable/passo"/>



				<EditText
					android:id="@+id/user"
					android:layout_width="370dp"
					android:layout_height="60dp"
					android:layout_alignParentStart="true"
					android:layout_marginLeft="450dp"
					android:layout_marginTop="330dp"
					android:layout_marginRight="500dp"
                   android:background="@drawable/border_black"
					android:paddingLeft="60dp"
					android:paddingTop="13dp"
					android:layout_marginBottom="15dp"
					android:hint="Username"
					android:textColor="#FFFFFF"
					android:textSize="23sp"
					android:textStyle="normal"
					android:textColorHint="#ccc"

					/>


				<EditText
					android:id="@+id/password"
					android:layout_width="370dp"
					android:layout_height="60dp"
					android:layout_alignParentStart="true"
					android:layout_marginStart="452dp"
					android:layout_marginLeft="450dp"
					android:layout_marginTop="440dp"
					android:layout_marginRight="500dp"
					android:layout_marginBottom="15dp"
					android:background="@drawable/border_black"
					android:hint="Password"
					android:inputType="textPassword"
					android:paddingLeft="60dp"
					android:textColor="#FFFFFF"
					android:paddingTop="13dp"
					android:textColorHint="#ccc"
					android:textSize="23sp"
					android:textStyle="normal" />

				<Button
					android:id="@+id/iniciar_sesion"
					android:layout_width="300dp"
					android:layout_height="60dp"
					android:background="@drawable/border_black"
					android:text="LOGIN"
					android:textColor="@color/white"
					android:textSize="40sp"
					android:paddingLeft="9dp"
					android:layout_marginLeft="490dp"
					android:layout_marginTop="560dp"
					android:textStyle="bold|italic"


						/>


				</RelativeLayout>

				<View
					android:id="@+id/_bg__group_1_ek1"
					android:layout_width="393dp"
					android:layout_height="100dp"
					android:layout_marginStart="-407dp"
					android:layout_marginTop="-622dp"
					android:background="@drawable/_bg__group_1_ek1_shape" />

			</RelativeLayout>


	</ScrollView>
</HorizontalScrollView>