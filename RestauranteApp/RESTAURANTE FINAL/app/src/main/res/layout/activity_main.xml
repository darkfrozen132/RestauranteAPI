<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">


    <View
        android:id="@+id/vista_menu_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-1dp"

        android:background="@drawable/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ped_mesa"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:text="Pedido en mesa"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ped_lleva"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="520dp"

        android:background="@drawable/border_black"
        android:gravity="center"
        android:text="Pedido para llevar"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_principal_admin"
        android:layout_width="495dp"
        android:layout_height="81dp"
        android:layout_marginStart="432dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="MENU PRINCIPAL"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="152dp"
        android:layout_height="130dp"
        android:layout_marginStart="44dp"

        android:layout_marginTop="52dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"


        android:scaleType="centerCrop"
        android:src="@drawable/descarga"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>