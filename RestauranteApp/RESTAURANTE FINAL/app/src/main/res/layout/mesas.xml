<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="1338dp"
        android:layout_height="800dp"
        android:background="@drawable/_bg__login_ek2_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/gridLayout"
        android:layout_width="1269dp"
        android:layout_height="794dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="4dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:orientation="horizontal"
        android:padding="16dp"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-4dp">

        <Spinner
            android:id="@+id/spinnerPisos"
            android:background="@drawable/border_black"
            android:layout_width="264dp"
            android:layout_height="76dp"
            android:layout_margin="16dp" />

        <ImageView
            android:id="@+id/mesaImageView"
            android:layout_width="41dp"
            android:layout_height="29dp"
            android:src="@drawable/libre" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>















