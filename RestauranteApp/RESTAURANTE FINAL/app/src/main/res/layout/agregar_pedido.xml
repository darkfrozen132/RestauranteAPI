<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/_bg__login_ek2_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="NUMERO DE MESA:"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_seleccionar"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="204dp"
        android:text="SELECCIONE TIPO:"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_tipo"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="204dp"
        android:background="@color/login_ek3_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_mesa"
        android:layout_width="531dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_atras"
        android:layout_width="166dp"
        android:layout_height="176dp"
        android:layout_marginStart="984dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrolresumen"
        android:layout_width="390dp"
        android:layout_height="258dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="312dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/mesa"
        android:layout_width="133dp"
        android:layout_height="41dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/login_ek3_color"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="448dp"
        android:layout_height="402dp"
        android:layout_marginStart="681dp"
        android:layout_marginTop="277dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/txtTotalPlatos"
        android:layout_width="114dp"
        android:layout_height="58dp"
        android:layout_marginStart="900dp"
        android:layout_marginTop="600dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>